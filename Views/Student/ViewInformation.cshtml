@model IEnumerable<ICEP_System.Models.Document>

@{
    ViewBag.Title = "ViewInformation";
    if (Session["UserName"] == null)
    {
        Response.Redirect("~/Home/Login/", false);

    }
}

<h2>View Documents</h2>


    
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DocumentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FilePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatePosted)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DocumentName)
        </td>
        <td>
            <a href=@Url.Content( item.FilePath) download>Download</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatePosted)
        </td>
        <td>
            
            
            
        </td>
    </tr>
}

</table>
